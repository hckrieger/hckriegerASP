@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="banner text-center front-section">
    <div class="profile-card">
        <h1>Hunter Krieger</h1>
        <img class="profile-image" src="~/images/profile.jpg" />
        <h2>Reader, Writer, Musician, Programmer</h2>
    </div>
</div>

<hr class="index-divider"/>

<div class="blog front-section">
    <h1 class="text-center">Blog Posts</h1>
    <div class="row recent_posts">
        @if (Model.Posts.Count > 0)
        {
            @foreach (var item in Model.Posts)
            {
                
                   <div class="col-lg-6">

                    <div class="post post-@item.PostId">

                        <h5>Hunter Krieger</h5>
                        <h3><a asp-page="/Posts/Details" asp-route-id="@item.PostId">@item.Title</a></h3>
                        <h5>@item.DatePublished</h5>
                    </div>
                </div>                 
                
            }
        } else
        {
                <h5 class="mt-3 text-center">Sorry, there are no posts right now.  Check back later.</h5>
        }
    </div>

    @if (Model.TotalPosts.Count > 4)
    {
        <br />
        <div class="text-center">
            <a class="btn btn-primary" asp-page="/Posts/Archives">More Posts</a>
        </div>
    }

</div>
